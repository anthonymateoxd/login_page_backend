pipeline {
    agent any

    tools {
        // Configure kubectl in Jenkins Global Tool Configuration
        kubectl 'kubectl' 
    }

    environment {
        // Use environment-agnostic kubeconfig handling
        KUBECONFIG = credentials('kubeconfig')
    }

    stages {
        stage('Aplicar ConfiguraciÃ³n Backend') {
            steps {
                script {
                    echo 'ğŸš€ Iniciando despliegue del Backend en Kubernetes...'

                    echo 'ğŸ§± Aplicando Deployment...'
                    kubectl('apply -f backend.yaml --validate=false')

                    echo 'ğŸŒ Aplicando Service...'
                    kubectl('apply -f backend-service.yaml --validate=false')
                }
            }
        }

        stage('Verificar Despliegue') {
            steps {
                script {
                    echo 'ğŸ” Verificando pods en ejecuciÃ³n...'
                    kubectl('get pods -n default')
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… Despliegue completado exitosamente.'
        }
        failure {
            echo 'âŒ Error durante el despliegue del Backend.'
        }
    }
}

// Custom function to handle kubectl commands
def kubectl(String args) {
    if (isUnix()) {
        sh "kubectl ${args}"
    } else {
        bat "kubectl ${args}"
    }
}